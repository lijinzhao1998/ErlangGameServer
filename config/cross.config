[
  {kernel, [
    {distributed, [
      {cross_app, [
        {cross_server@127.0.0.1, [cross_sup]}
      ]}
    ]},
    {sync_nodes_optional, [cross_server@127.0.0.1]},
    {sync_nodes_timeout, 10000}
  ]},
  {cross_app, [
    {server_name, "跨服服务器"},
    {server_port, 6000},
    {max_connections, 10000},
    {heartbeat_interval, 30000},
    {connection_timeout, 60000}
  ]},
  {logger, [
    {level, info},
    {handlers, [
      {default, logger_std_h, #{
        level => info,
        formatter => {logger_formatter, #{
          template => [time, " [", level, "] ", msg, "\n"]
        }}
      }}
    ]}
  ]}
]. 