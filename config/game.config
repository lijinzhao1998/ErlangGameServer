[
  {kernel, [
    {distributed, [
      {game_app, [
        {game_server@127.0.0.1, [game_sup]}
      ]}
    ]},
    {sync_nodes_optional, [game_server@127.0.0.1]},
    {sync_nodes_timeout, 10000}
  ]},
  {game_app, [
    {server_name, "游戏服务器"},
    {server_port, 8000},
    {max_connections, 20000},
    {heartbeat_interval, 30000},
    {connection_timeout, 60000},
    {max_players_per_world, 1000},
    {world_count, 1}
  ]},
  {logger, [
    {level, info},
    {handlers, [
      {default, logger_std_h, #{
        level => info,
        formatter => {logger_formatter, #{
          template => [time, " [", level, "] ", msg, "\n"]
        }}
      }}
    ]}
  ]}
]. 